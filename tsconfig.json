{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ES2017", "DOM"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "outDir": "resources",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*", "./types/index.d.ts"]
}
